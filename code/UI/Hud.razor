@using Sandbox.UI
@namespace Frightworks.UI
@inherits RootPanel
@attribute [StyleSheet("/UI/hud.scss")]

<root class="hud">
    @if(GameSettings.IsDebug)
    {
        <DebugWarning/>
    }

    @if (FrightworksGame.Current.Behavior is LobbyBehavior)
    {
        <LobbyHud/>
    }
    else
    {
        <MatchHud/>
    }
</root>

@code {

    protected override void UpdateScale(Rect screenSize)
    {
        Scale = 1f;
    }

}