@using Sandbox.UI
@namespace Frightworks.UI
@inherits Panel
@attribute [StyleSheet("/UI/Match/match.scss")]

@{
	var gameState = (FrightworksGame.Current.Behavior as MatchBehavior).State;
}

<root class="match-hud">
	@switch (gameState)
	{
		case MatchState.WaitingForPlayers:
			<JoinedPlayers />
			break;
		case MatchState.Ongoing:
			//nothing yet
			break;
		case MatchState.Ended:
			<MatchResults />
			break;
	}
</root>

@code {
	protected override int BuildHash()
	{
		var gameState = (FrightworksGame.Current.Behavior as MatchBehavior).State;
		return HashCode.Combine(gameState);
	}
}