@using Sandbox
@using Sandbox.UI
@using System.Linq;
@using Frightworks
@namespace Frightworks.UI
@inherits Panel

<root class="lobby-players">
    @foreach (var plr in Entity.All.OfType<LobbyPlayer>())
    {
        var sign = plr.ReadyAs switch
        {
            ReadyAs.Survivor => "🔦",
            ReadyAs.Slasher => "💀",
            ReadyAs.None or _ => "☒",
        }; 

        <label>@($"{plr.Client.Name} {sign}")</label>
    }
</root>